<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:background="@color/cardview_shadow_end_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/claim_IMG_image"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/add_photo"
            android:adjustViewBounds="true"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/claim_LBL_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toEndOf="@+id/claim_IMG_image"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:maxLines="2" />



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/claim_LBL_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:minLines="1"
            android:layout_below="@+id/claim_LBL_date"
            android:layout_toEndOf="@+id/claim_IMG_image"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text=""
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/claim_IMG_star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/claim_LBL_date"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/claim_IMG_done"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/claim_IMG_star"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/claim_IMG_trash"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/trash"
            android:visibility="invisible"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>